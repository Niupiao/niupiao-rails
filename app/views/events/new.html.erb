<%= form_for @event, url: { action: :create }, html: { class: 'nifty_form' } do |f| %>
  <%= f.text_field :name, placeholder: 'name' %>
  <br>
  <%= f.text_field :organizer, placeholder: 'organizer' %>
  <br>
  <%= f.text_field :location, placeholder: 'location' %>
  <br>
  <%= f.text_field :description, placeholder: 'description' %>
  <br>
  <%= f.text_field :image_path, placeholder: 'image_path' %>
  <br>
  <%= f.text_field :total_tickets, placeholder: 'total_tickets' %>
  <br>
  <%= f.submit 'Create' %>
<% end %>
