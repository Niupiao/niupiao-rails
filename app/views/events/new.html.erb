<%= form_for @event, url: { action: :create }, html: { multipart: true, class: 'nifty_form' } do |f| %>
  <%= f.text_field :name, placeholder: 'name' %>
  <br>
  <%= f.text_field :organizer, placeholder: 'organizer' %>
  <br>
  <%= f.text_field :location, placeholder: 'location' %>
  <br>
  <%= f.text_field :date, placeholder: 'date, ex: "April 12, 2015"' %>
  <br>
  <%= f.text_field :description, placeholder: 'description' %>
  <br>
  <%= f.text_field :link, placeholder: 'event link' %>
  <br>
  <%= f.text_field :total_tickets, placeholder: 'total tickets' %>
  <br>
  <%= f.file_field :image %>
  <br>
  
  <p>Creating new Ticket Types</p>
  <%= f.fields_for :ticket_statuses_attributes do |builder| %>
    <%= render "event_ticket_status_field", :f => builder %>
  <% end %>
  
  <p><%= link_to_add_ticket_status "Add Ticket Status", f, :ticket_statuses %></p>
  
  <%= f.submit 'Create' %>
<% end %>