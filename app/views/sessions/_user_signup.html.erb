<p class="signup_form">
    <h1>Register as a Fan</h1>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%# render 'shared/error_messages' %>

            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form_control' %>

            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form_control' %>

            <%= f.label :email %>
            <%= f.password_field :email, class: 'form_control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form_control' %>
    
        </div>
    </div>
</p>