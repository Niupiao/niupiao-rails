New ticket for Event: <%= @event.name %>

<%= form_for @ticket, url: { action: :create }, html: { class: 'nifty_form' } do |f| %>
  <%= f.text_field :status, placeholder: 'status' %>
  <br>
  <%= f.label :ticket_status %><br />
  <%= f.select :ticket_status_id, options_for_select(@event.ticket_statuses.map{ |s| [s.name, s.id] }) %>
  <br>
  <-- TODO submit event_id: @event.id automatically ->
  <%= f.label :event %><br />
  <%= f.select :event_id, options_for_select(Event.all.map{|s|[s.name, s.id]}) %>
  <br>
  <%= f.submit 'Create' %>
<% end %>
